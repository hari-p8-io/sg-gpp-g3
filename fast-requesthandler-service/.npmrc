# NPM Registry Configuration for @gpp scope
# This configures the npm client to use the private registry for @gpp scoped packages

# Private registry for @gpp scope
@gpp:registry=https://npm.pkg.github.com/gpp/
# Alternative private registry options (uncomment if using different registry):
# @gpp:registry=https://registry.npmjs.org/
# @gpp:registry=https://nexus.internal.gpp.com/repository/npm-private/

# Authentication token for private registry
# Use environment variable for security: NPM_TOKEN
# Example: //npm.pkg.github.com/:_authToken=${NPM_TOKEN}
//npm.pkg.github.com/:_authToken=${NPM_TOKEN}

# Alternative authentication for other registries (uncomment if needed):
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}
# //nexus.internal.gpp.com/repository/npm-private/:_authToken=${NPM_TOKEN}

# Always authenticate for @gpp scoped packages
@gpp:always-auth=true

# Registry configuration for default packages (public npm)
registry=https://registry.npmjs.org/

# Additional security settings
audit-level=moderate
fund=false
# save-exact=true  # Uncomment to save exact versions

# Local development settings
# If developing locally and the package is in a workspace, npm will use the local version
# This configuration only applies when installing from the registry 
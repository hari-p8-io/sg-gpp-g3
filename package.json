{
  "name": "gppg3-orchestration-tests",
  "version": "1.0.0",
  "description": "Orchestration tests for VAM/MDZ routing in GPP G3",
  "main": "test-orchestration.js",
  "private": true,
  "workspaces": [
    "pw-core",
    "fast-logger",
    "fast-requesthandler-service",
    "fast-enrichment-service",
    "fast-validation-service",
    "fast-orchestrator-service",
    "fast-limitcheck-service",
    "fast-accounting-service",
    "fast-vammediation-service",
    "fast-accountlookup-service",
    "fast-referencedata-service",
    "fast-mdzmediation-service"
  ],
  "scripts": {
    "test": "node test-orchestration.js",
    "start-orchestration": "./start-orchestration-test.sh",
    "start-orchestration-no-test": "./start-orchestration-test.sh --no-test",
    "start:fast-requesthandler": "cd fast-requesthandler-service && npm run dev",
    "start:fast-enrichment": "cd fast-enrichment-service && npm run dev",
    "start:fast-validation": "cd fast-validation-service && npm run dev",
    "start:fast-orchestrator": "cd fast-orchestrator-service && npm run dev",
    "pw-core:build": "cd pw-core && npm run build",
    "pw-core:test": "cd pw-core && npm run test",
    "pw-core:publish": "cd pw-core && npm publish",
    "services:install": "npm install --workspaces",
    "services:build": "npm run build --workspaces",
    "services:test": "npm run test --workspaces"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15",
    "axios": "^1.10.0",
    "fast-xml-parser": "^5.2.5",
    "kafkajs": "^2.2.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "npm-run-all": "^4.1.5"
  },
  "keywords": [
    "orchestration",
    "vam",
    "mdz",
    "kafka",
    "microservices",
    "testing"
  ],
  "author": "GPPG3 Team",
  "license": "ISC"
}
